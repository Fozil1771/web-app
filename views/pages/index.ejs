<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- <link rel="stylesheet" href="../css/main.css"> -->

    <%- include("./style.ejs"); %>

</head>

<body>


    <div class="container">
        <div class="content">

            <h1>Users Management System</h1>

            <form method="POST" action="/user/add" id="form" class="form">
                <div>
                    <h5 class="form-label">Username</h5>
                    <input id="username" type="text" name="username">
                </div>
                <div>
                    <h5 class="form-label">Fullname</h5>
                    <input id="fullname" type="text" name="fullname">
                </div>
                <div>
                    <h5 class="form-label">Email</h5>
                    <input id="email" type="text" name="email">
                </div>

                <div>
                    <h5 class="form-label">Age</h5>
                    <input id="age" type="text" name="age">
                </div>

                <div class="form-submit">
                    <button id="submit" type="submit">submit</button>
                </div>
            </form>

            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Username</th>
                            <th>Fullname</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(function(user) { %>
                            <tr>
                                <td>
                                    <%= user.username %>
                                </td>
                                <td>
                                    <%= user.fullname %>
                                </td>
                                <td>
                                    <%= user.email %>
                                </td>
                                <td>
                                    <%= user.age %>
                                </td>



                                <td>
                                    <a href="/user/<%= user.id %>" class="td-btn"><i class="fa-solid fa-pen"></i></a>
                                </td>

                                <td>
                                    <a href="/user/delete/<%= user.id %>" class="td-btn"><i
                                            class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                            <% }); %>



                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>

</html>