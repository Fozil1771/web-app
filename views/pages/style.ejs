<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;

    }

    @import url(https://fonts.googleapis.com/css2?family=Open+Sans:wght@100;200;300;400;500;600;800&display=swap);

    body {
        font-family: 'Open Sans', sans-serif;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh;
        background-color: #111d32;
    }

    .container {

        max-width: 992px;
        width: 100%;
        margin: 0 auto;
        padding: 0 16px;

    }

    .content {
        background-color: #1e2a41;
        padding: 50px 100px;
        border-radius: 5px;
    }



    h1,
    h3 {
        color: #fff;
    }



    .form {
        width: 100%;
        margin: 30px auto;
        display: flex;
        justify-content: space-between;
        position: relative;
        flex-direction: column;
    }



    .form div {
        display: flex;
        margin-bottom: 10px;
        align-items: center;
    }

    .form .form-label {
        width: 100px !important;
        color: #fff;
    }

    .form input {
        width: 40%;
        padding: 10px 20px;
        height: 40px;
        background-color: #111d32;
        outline: none;
        border: 1px solid #111d32;
        color: #99a5bd;
    }

    .fomr #email {
        text-transform: lowercase;
    }

    input:focus {
        border-color: #99a5bd;
        outline: none;
    }

    .form-submit {
        align-self: flex-end;
        text-align: end;
        width: 120px;
    }

    .form button {
        width: 100%;
        padding: 4px 0;
        background-color: #1e2a41;
        border: 1px solid #111d32;
        color: #99a5bd;
        cursor: pointer;
        font-weight: 500;
    }

    .form button:hover {
        background-color: #111d32;
    }

    .table-container {
        overflow-x: scroll;
    }

    .table-container::-webkit-scrollbar {
        height: 5px;
    }

    .table-container::-webkit-scrollbar-track {
        width: 20px;
    }

    .table-container::-webkit-scrollbar-thumb {
        background: #fff;
    }

    table {
        color: #99a5bd;
        width: 100%;
    }

    table th,
    table td {
        padding: 15px 20px;
        text-align: left;
        font-size: 14px;
    }

    table tr {
        background-color: #162237;
    }

    table tr:hover {
        background-color: #111d32;
    }

    table tr th:first-of-type,
    table tr td:first-of-type {
        border-top-left-radius: 5px;
        border-bottom-left-radius: 5px;
    }

    table tr td .td-btn {
        background-color: #162237;
        color: #99a5bd;
        outline: none;
        border: none;
        visibility: hidden;
        cursor: pointer;
    }

    table tr:hover .fa-trash {
        visibility: visible;
    }

    table tr:hover .fa-pen {
        visibility: visible;
    }

    @media(max-width:768px) {
        .container {
            padding: 50px 20px;
        }

        table th:nth-of-type(3),
        table td:nth-of-type(3) {
            display: none;
        }

        .fa-trash {
            visibility: visible;
        }

        .fa-pen {
            visibility: visible;
        }
    }
</style>